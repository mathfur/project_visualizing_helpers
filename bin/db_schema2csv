#!/usr/bin/env ruby
# encoding: utf-8

$: << (File.dirname(__FILE__) + "/..")

require 'getoptlong'
require 'lib/project_visualizing_helpers'

usage = <<EOS
Usage: db_schema2csv [file]
-v --version display version information and exit.
EOS

opts = GetoptLong.new(
  ['--help', '-h', GetoptLong::NO_ARGUMENT],
  ['--version', '-v', GetoptLong::NO_ARGUMENT],
)

begin
  opts.each do |opt, arg|
    case opt
    when '--help'; puts usage; exit
    when '--version'; puts Railroad2Dot::VERSION; exit
    end
  end
rescue StandardError => e
  puts "wrong option" + e.inspect
  exit
end

db_schema2csv = ProjectVisualizingHelpers::DbSchema2CSV.new(ARGF.read)

puts db_schema2csv.headers.join(",")
puts db_schema2csv.result_by_csv
