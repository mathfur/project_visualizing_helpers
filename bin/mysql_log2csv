#!/usr/bin/env ruby
# encoding: utf-8

require 'getoptlong'
require './lib/project_visualizing_helpers'

usage = <<EOS
Usage: mysql_log2csv [file]
EOS

opts = GetoptLong.new(
  ['--help', '-h', GetoptLong::NO_ARGUMENT],
  ['--version', '-v', GetoptLong::NO_ARGUMENT]
)

begin
  opts.each do |opt, arg|
    case opt
    when '--help'; puts usage; exit
    when '--version'; puts Railroad2Dot::VERSION; exit
    when '--edges'
      output_type = :edges
    when '--nodes'
      output_type = :nodes
    end
  end
rescue StandardError => e
  puts "wrong option" + e.inspect
  exit
end

ProjectVisualizingHelpers::MySQLLog2CSV.new(ARGF.read).result(:time, :argument).each do |line|
  puts line.map{|e| '"' + (e || '').gsub('"', '\\"') + '"' }.join(",")
end
