#!/usr/bin/env ruby
# encoding: utf-8

$: << (File.dirname(__FILE__) + "/..")

require 'getoptlong'
require 'lib/project_visualizing_helpers'

usage = <<EOS
Usage: mysql_log2csv [file]
EOS

opts = GetoptLong.new(
  ['--help', '-h', GetoptLong::NO_ARGUMENT],
  ['--version', '-v', GetoptLong::NO_ARGUMENT]
)

begin
  opts.each do |opt, arg|
    case opt
    when '--help'; puts usage; exit
    when '--version'; puts Railroad2Dot::VERSION; exit
    when '--edges'
      output_type = :edges
    when '--nodes'
      output_type = :nodes
    end
  end
rescue StandardError => e
  puts "wrong option" + e.inspect
  exit
end

mysql_log2csv = ProjectVisualizingHelpers::MySQLLog2CSV.new(ARGF.read)
puts "time,argument"
puts mysql_log2csv.result_by_csv(:time, :argument)
